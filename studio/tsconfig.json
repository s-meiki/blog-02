{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["sanity"],
    "baseUrl": "."
  },
  "include": [
    "sanity.config.ts",
    "sanity.cli.ts",
    "structure.ts",
    "schemaTypes/**/*.ts",
    "lib/**/*.ts",
    "tests/**/*.ts"
  ]
}
